{
  "branches": ["release-0.3.0"],
  "plugins": [
    "@semantic-release/commit-analyzer",
    "@semantic-release/release-notes-generator",
    ["@semantic-release/github", {
      "assets": [
        { "path": "release-assets/keycloak-mcp-server-*-linux", "label": "Linux Binary v${nextRelease.version}" },
        { "path": "release-assets/keycloak-mcp-server-*-macos", "label": "macOS Binary v${nextRelease.version}" },
        { "path": "release-assets/keycloak-mcp-server-*-windows.exe", "label": "Windows Binary v${nextRelease.version}" },
        { "path": "release-assets/keycloak-mcp-server-*-runner.jar", "label": "Executable JAR v${nextRelease.version}" }
      ]
    }],
    ["@semantic-release/git", {
      "assets": ["pom.xml", "README.md"],
      "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
    }]
  ]
}